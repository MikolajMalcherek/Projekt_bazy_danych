@page
@model bazy.Pages.DodajZawodnikaModel

@{
    ViewData["Title"] = "Dodaj Zawodnika";
}

<h1 class="text-center mt-5">Dodaj Zawodnika</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Zawodnik.imie_zawodnika" class="control-label"></label>
                <input asp-for="Zawodnik.imie_zawodnika" class="form-control" />
                <span asp-validation-for="Zawodnik.imie_zawodnika" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Zawodnik.nazwisko_zawodnika" class="control-label"></label>
                <input asp-for="Zawodnik.nazwisko_zawodnika" class="form-control" />
                <span asp-validation-for="Zawodnik.nazwisko_zawodnika" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Zawodnik.kraj_pochodzenia" class="control-label"></label>
                <input asp-for="Zawodnik.kraj_pochodzenia" class="form-control" />
                <span asp-validation-for="Zawodnik.kraj_pochodzenia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>




@if (TempData["Message"] != null)
{
    <div class="alert alert-danger">@TempData["Message"]</div>
}


<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <a asp-page="Index" class="btn btn-secondary btn-block">Powrót do strony głównej</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
